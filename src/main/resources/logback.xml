<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d [%thread] %-5level %logger{48} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="nl.knaw.huygens" level="trace"/>
    <logger name="example" level="trace"/>

    <root level="debug">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
